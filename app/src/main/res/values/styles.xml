<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- +++++++++++++++++++++ Base Styles +++++++++++++++++++++ -->


    <!-- ListView style -->
    <style name="CustomListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@drawable/line</item>
        <item name="android:dividerHeight">@dimen/divider_size</item>
    </style>

    <!-- Button style -->
    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/tex_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/ui_text_selector</item>
    </style>

    <!-- EditText style -->
    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/tex_size_xlarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dim_10</item>
    </style>

    <!-- CheckBox style -->
    <style name="CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/tex_size_large</item>
        <item name="android:textColor">@color/gray_35</item>
    </style>

    <!-- RadioButton style -->
    <style name="CustomRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/tex_size_large</item>
        <item name="android:textColor">@color/gray_35</item>
    </style>

    <!-- ProgressBar style -->
    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">@dimen/progressbar_height</item>
        <item name="android:minHeight">@dimen/progressbar_height</item>
    </style>

    <!-- SeekBar style -->
    <style name="CustomSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">@dimen/seekbar_height</item>
        <item name="android:minHeight">@dimen/seekbar_height</item>
    </style>

    <!-- +++++++++++++++++++++ End of Base Styles +++++++++++++++++++++ -->


    <!-- +++++++++++++++++++++ Purple Styles +++++++++++++++++++++ -->
    <!-- Purple button Style -->
    <style name="Button_Purple" parent="CustomButton">
        <item name="android:background">@drawable/ui_button_purple</item>
    </style>

    <!-- Purple EditText style -->
    <style name="EditText_Purple" parent="CustomEditText">
        <item name="android:background">@drawable/ui_border_purple</item>
        <item name="android:textColor">@drawable/ui_text_selector_purple</item>
    </style>

    <!-- Purple CheckBox style -->
    <style name="CheckBox_Purple" parent="CustomCheckBox">
        <item name="android:button">@drawable/ui_checkbox_purple</item>
    </style>

    <!-- Purple RadioButton style -->
    <style name="RadioButton_Purple" parent="CustomRadioButton">
        <item name="android:button">@drawable/ui_radio_purple</item>
    </style>

    <!-- Purple ProgressBar style -->
    <style name="ProgressBar_Purple" parent="CustomProgressBar">
        <item name="android:progressDrawable">@drawable/ui_progress_purple</item>
    </style>

    <!-- Purple SeekBar style -->
    <style name="SeekBar_Purple" parent="CustomSeekBar">
        <item name="android:progressDrawable">@drawable/ui_progress_purple</item>
        <item name="android:thumb">@drawable/ui_seekbar_handel_purple</item>
    </style>
    <style name="Spinner_Purple" >

    </style>
    <!-- +++++++++++++++++++++ End of Purple Styles +++++++++++++++++++++ -->

    <!-- +++++++++++++++++++++ Red Styles +++++++++++++++++++++ -->
    <!-- Red button Style -->
    <style name="Button_Red" parent="CustomButton">
        <item name="android:background">@drawable/ui_button_red</item>
    </style>

    <!-- Red EditText style -->
    <style name="EditText_Red" parent="CustomEditText">
        <item name="android:background">@drawable/ui_border_red</item>
        <item name="android:textColor">@drawable/ui_text_selector_red</item>
    </style>

    <!-- Red CheckBox style -->
    <style name="CheckBox_Red" parent="CustomCheckBox">
        <item name="android:button">@drawable/ui_checkbox_red</item>
    </style>

    <!-- Red RadioButton style -->
    <style name="RadioButton_Red" parent="CustomRadioButton">
        <item name="android:button">@drawable/ui_radio_red</item>
    </style>

    <!-- Red ProgressBar style -->
    <style name="ProgressBar_Red" parent="CustomProgressBar">
        <item name="android:progressDrawable">@drawable/ui_progress_red</item>
    </style>

    <!-- Red SeekBar style -->
    <style name="SeekBar_Red" parent="CustomSeekBar">
        <item name="android:progressDrawable">@drawable/ui_progress_red</item>
        <item name="android:thumb">@drawable/ui_seekbar_handel_red</item>
    </style>

    <!-- +++++++++++++++++++++ End of Red Styles +++++++++++++++++++++ -->
    <!-- Lilac button Style -->
    <style name="Button_Lilac" parent="CustomButton">
        <item name="android:background">@drawable/ui_button_lilac</item>
    </style>
    <!-- Orange button Style -->
    <style name="Button_Orange" parent="CustomButton">
        <item name="android:background">@drawable/ui_button_orange</item>
    </style>
    <style name="Button_Yellow" parent="CustomButton">
        <item name="android:background">@drawable/ui_button_yellow</item>
    </style>
    <!-- Green button Style -->
    <style name="Button_Green" parent="CustomButton">
        <item name="android:background">@drawable/ui_button_green</item>
    </style>

</resources>
